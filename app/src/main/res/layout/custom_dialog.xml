<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="fill_parent">
    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/dialog_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFF"
        android:layout_toRightOf="@+id/dialog_image"/>

    <Button
        android:id="@+id/dialog_button_ok"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/verwijder"
        android:textSize="20sp"
        android:padding="10dp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/my_button_one"
        android:layout_below="@+id/dialog_image"/>

    <Button
        android:id="@+id/dialog_button_annuleer"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:background="@drawable/my_button_three"
        android:textSize="20dp"
        android:text="@string/annuleer"
        android:padding="10dp"
        android:layout_below="@+id/dialog_image"
        android:layout_toRightOf="@id/dialog_button_ok"/>
</RelativeLayout>
